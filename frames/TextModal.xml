<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI.xsd">

    <Script file="TextModal.lua" />
    <Frame name="MapPinEnhancedTextModalTemplate" mixin="MapPinEnhancedTextModalMixin" hidden="true"
        virtual="true" toplevel="true" inherits="DefaultPanelFlatTemplate" parent="UIParent"
        enableMouse="true" movable="true" clampedToScreen="true" registerForDrag="LeftButton">
        <Size
            x="300" y="88" />
        <Anchors>
            <Anchor point="CENTER" relativeTo="UIParent" />
        </Anchors>
        <Layers>
            <Layer level="OVERLAY">
                <Texture parentKey="glow" atlas="challenges-blackfade"
                    desaturated="true" alpha="0">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="10" y="-25" />
                        <Anchor point="BOTTOMRIGHT" x="-5" y="25" />
                    </Anchors>
                    <Animations>
                        <AnimationGroup parentKey="fadeIn" setToFinalAlpha="true">
                            <Alpha duration="0.2" order="1" fromAlpha="0" toAlpha="0.3" />
                        </AnimationGroup>
                        <AnimationGroup parentKey="fadeOut" setToFinalAlpha="true">
                            <Alpha duration="0.2" order="1" fromAlpha="0.3" toAlpha="0" />
                        </AnimationGroup>
                    </Animations>
                </Texture>
            </Layer>
            <Layer level="BACKGROUND">
                <FontString parentKey="helpText" inherits="GameFontNormal"
                    text="Click here to start adding text"
                    justifyH="CENTER">
                    <Size x="200" y="20" />
                    <Anchors>
                        <Anchor point="CENTER" />
                    </Anchors>
                </FontString>
                <Texture parentKey="bg" atlas="auctionhouse-background-buy-noncommodities-header"
                    alpha="0.6">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="10" y="-25" />
                        <Anchor point="BOTTOMRIGHT" x="-5" y="25" />
                    </Anchors>
                    <Animations>
                        <AnimationGroup parentKey="fadeIn" setToFinalAlpha="true">
                            <Alpha duration="0.2" order="1" fromAlpha="0.6" toAlpha="1" />
                        </AnimationGroup>
                        <AnimationGroup parentKey="fadeOut" setToFinalAlpha="true">
                            <Alpha duration="0.2" order="1" fromAlpha="1" toAlpha="0.6" />
                        </AnimationGroup>
                    </Animations>
                </Texture>
            </Layer>
        </Layers>
        <Frames>
            <EditBox parentKey="editBox" multiLine="false" autoFocus="false" letters="255"
                font="GameFontNormalHuge">
                <Anchors>
                    <Anchor point="TOPLEFT" x="20" y="-25" />
                    <Anchor point="BOTTOMRIGHT" x="-45" y="25" />
                </Anchors>
            </EditBox>
            <Button parentKey="clearEditboxButton" inherits="UIButtonTemplate" hidden="true">
                <Size x="24" y="24" />
                <Anchors>
                    <Anchor point="RIGHT" x="-15" relativeKey="$parenteditBox" />
                </Anchors>
                <KeyValues>
                    <KeyValue key="buttonArtKit" value="128-redbutton-delete" type="string" />
                </KeyValues>
                <Scripts>
                    <OnClick>
                        self:GetParent().editBox:SetText("")
                        self:GetParent():UpdateHelpTextVisibility()
                    </OnClick>
                </Scripts>
            </Button>
            <Button parentKey="acceptButton" inherits="SharedButtonSmallTemplate" text="Accept"
                frameStrata="HIGH">
                <Size x="100" y="18" />
                <Anchors>
                    <Anchor point="BOTTOM" relativeTo="MapPinEnhancedTextModal" x="-55" y="5" />
                </Anchors>
            </Button>
            <Button parentKey="cancelButton" inherits="SharedButtonSmallTemplate" text="Cancel"
                frameStrata="HIGH">
                <Size x="100" y="18" />
                <Anchors>
                    <Anchor point="BOTTOM" relativeTo="MapPinEnhancedTextModal" x="55" y="5" />
                </Anchors>
            </Button>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad" />
        </Scripts>
    </Frame>
</Ui>
