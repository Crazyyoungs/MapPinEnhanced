<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/beta/Interface/AddOns/Blizzard_SharedXML/UI.xsd">

    <Script file="OptionEditorView.lua" />
    <Frame name="MapPinEnhancedOptionEditorViewSidebarTemplate"
        mixin="MapPinEnhancedOptionEditorViewSidebarMixin"
        virtual="true" hidden="true"
        enableMouse="true">
        <Size x="250" y="1" />
        <Anchors>
            <Anchor point="TOPLEFT" />
            <Anchor point="BOTTOMLEFT" />
        </Anchors>
        <Frames>
            <Button parentKey="switchViewButton"
                inherits="BigRedThreeSliceButtonTemplate">
                <Size x="1" y="26" />
                <Anchors>
                    <Anchor point="BOTTOMLEFT" x="10" y="5" />
                    <Anchor point="BOTTOMRIGHT" x="-10" y="5" />
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <Texture atlas="glues-characterSelect-iconShop-hover">
                            <Size x="20" y="20" />
                            <Anchors>
                                <Anchor point="LEFT" x="7" />
                            </Anchors>
                            <Color r="0.82" g="1" b="0" />
                        </Texture>
                        <FontString inherits="GameFontNormal" text="Sets"
                            justifyH="CENTER">
                            <Anchors>
                                <Anchor point="CENTER" />
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Button>
        </Frames>
        <Scripts>
            <OnShow method="OnShow" />
        </Scripts>
    </Frame>


    <Frame name="MapPinEnhancedOptionEditorViewBodyTemplate"
        mixin="MapPinEnhancedOptionEditorViewBodyMixin"
        virtual="true" hidden="true"
        enableMouse="true">
        <Frames>
            <!-- <Button inherits="MapPinEnhancedSquareButtonYellowTemplate">
                <Size x="50" y="50" />
                <Anchors>
                    <Anchor point="CENTER"></Anchor>
                </Anchors>
            </Button>
            <Button inherits="MapPinEnhancedSquareButtonRedTemplate">
                <Size x="50" y="50" />
                <Anchors>
                    <Anchor point="CENTER" y="-60"></Anchor>
                </Anchors>
            </Button> -->
            <Button inherits="MapPinEnhancedButtonYellowTemplate">
                <Size x="200" y="30" />
                <Anchors>
                    <Anchor point="CENTER"></Anchor>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <FontString inherits="MPHGameFontNormalBlack" text="Hey James">
                            <Anchors>
                                <Anchor point="CENTER" />
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Button>
            <Button inherits="MapPinEnhancedButtonRedTemplate">
                <Size x="200" y="30" />
                <Anchors>
                    <Anchor point="CENTER" y="-60"></Anchor>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <FontString inherits="GameFontNormal" text="Hey James">
                            <Anchors>
                                <Anchor point="CENTER" />
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Button>
        </Frames>
    </Frame>
</Ui>
