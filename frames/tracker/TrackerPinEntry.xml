        virtual="true" enableMouse="true">
        <Size x="275" y="37" />
        <KeyValues>
            <KeyValue key="titlePosition" value="RIGHT" />
            <KeyValue key="titleXOffset" value="5" />
        </KeyValues>
        <Frames>
            <Frame parentKey="Pin" inherits="MapPinEnhancedBasePinTemplate">
                <Anchors>
                    <Anchor point="LEFT" x="0" />
                </Anchors>
            </Frame>
        </Frames>
        <Layers>
            <Layer level="HIGHLIGHT">
                <Texture parentKey="highlight" atlas="groupfinder-button-select" alphaMode="ADD"
                    setAllPoints="true" />
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad method="OnLoad" />
            <OnEnter method="OnEnter" />
            <OnLeave method="OnLeave" />
        </Scripts>
    </Button>
</Ui>
