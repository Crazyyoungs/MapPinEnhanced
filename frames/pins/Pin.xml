<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI.xsd">
    <Script file="Pin.lua" />
    <Frame name="MapPinEnhancedBasePinTemplate" mixin="MapPinEnhancedBasePinMixin"
        virtual="true" enableMouse="true" frameStrata="HIGH">
        <Size x="30" y="30" />
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="shadow"
                    file="Interface/AddOns/MapPinEnhanced/assets/PinShadow.png"
                    setAllPoints="true" texelSnappingBias="0" snapToPixelGrid="false" />
            </Layer>
            <Layer level="BORDER">
                <Texture parentKey="background"
                    file="Interface/AddOns/MapPinEnhanced/assets/PinBackground.png"
                    setAllPoints="true" texelSnappingBias="0" snapToPixelGrid="false" />
            </Layer>
            <Layer level="ARTWORK">
                <Texture parentKey="texture" atlas="Waypoint-MapPin-Untracked" setAllPoints="true"
                    texelSnappingBias="0" snapToPixelGrid="false" />
                <FontString parentKey="title" inherits="GameFontNormal" text="Pin Title"
                    justifyV="MIDDLE" justifyH="CENTER" />
            </Layer>
            <Layer level="OVERLAY">
                <Texture parentKey="icon"
                    hidden="true" texelSnappingBias="0" snapToPixelGrid="false">
                    <Size x="20" y="20" />
                    <Anchors>
                        <Anchor point="CENTER" />
                    </Anchors>
                </Texture>
                <MaskTexture parentKey="iconMask"
                    file="Interface/AddOns/MapPinEnhanced/assets/PinMask.png"
                    hWrapMode="CLAMPTOBLACKADDITIVE" vWrapMode="CLAMPTOBLACKADDITIVE">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="6" y="-6" />
                        <Anchor point="BOTTOMRIGHT" x="-6" y="6" />
                    </Anchors>
                    <MaskedTextures>
                        <MaskedTexture childKey="icon" />
                    </MaskedTextures>
                </MaskTexture>
            </Layer>
            <Layer level="HIGHLIGHT">
                <Texture parentKey="highlight" texelSnappingBias="0" snapToPixelGrid="false"
                    file="Interface/AddOns/MapPinEnhanced/assets/PinHighlight.png"
                    setAllPoints="true" />
            </Layer>
        </Layers>
    </Frame>
</Ui>
