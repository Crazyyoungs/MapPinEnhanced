<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI.xsd">
    <Script file="Pin.lua" />
    <Button name="MapPinEnhancedBasePinTemplate" mixin="MapPinEnhancedBasePinMixin"
        virtual="true" enableMouse="true">
        <Size x="30" y="30" />
        <Layers>
            <Layer level="BACKGROUND">
                <Texture file="Interface/AddOns/MapPinEnhanced/assets/PinShadow.png"
                    setAllPoints="true" />
            </Layer>
            <Layer level="ARTWORK">
                <Texture parentKey="icon" atlas="Waypoint-MapPin-Untracked" setAllPoints="true" />
                <FontString parentKey="title" inherits="GameFontNormal" text="Pin Title"
                    justifyV="MIDDLE" justifyH="CENTER" />
            </Layer>
            <Layer level="OVERLAY">
                <Texture parentKey="customTexture"
                    hidden="true">
                    <Size x="20" y="20" />
                    <Anchors>
                        <Anchor point="CENTER" />
                    </Anchors>
                </Texture>
                <MaskTexture parentKey="customTextureMask"
                    file="Interface/AddOns/MapPinEnhanced/assets/PinMask.png"
                    hWrapMode="CLAMPTOBLACKADDITIVE" vWrapMode="CLAMPTOBLACKADDITIVE">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="6" y="-6" />
                        <Anchor point="BOTTOMRIGHT" x="-6" y="6" />
                    </Anchors>
                    <MaskedTextures>
                        <MaskedTexture childKey="customTexture" />
                    </MaskedTextures>
                </MaskTexture>
            </Layer>
            <Layer level="HIGHLIGHT">
                <Texture parentKey="highlight"
                    file="Interface/AddOns/MapPinEnhanced/assets/PinHighlight.png"
                    setAllPoints="true" />
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad method="OnLoad" />
        </Scripts>
    </Button>
</Ui>
