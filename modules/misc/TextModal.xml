<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/beta/Interface/AddOns/Blizzard_SharedXML/UI.xsd">

    <Script file="TextModal.lua" />
    <Frame name="MapPinEnhancedTextModalTemplate" mixin="MapPinEnhancedTextModalMixin"
        hidden="true"
        virtual="true" toplevel="true" parent="UIParent"
        clampedToScreen="true">
        <Size
            x="300" y="75" />
        <Anchors>
            <Anchor point="CENTER" relativeTo="UIParent" />
        </Anchors>
        <Layers>
            <Layer level="OVERLAY">
                <Texture parentKey="glow" atlas="challenges-blackfade"
                    desaturated="true" alpha="0">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="13" y="-13" />
                        <Anchor point="BOTTOMRIGHT" x="-13" y="30" />
                    </Anchors>
                    <Animations>
                        <AnimationGroup parentKey="fadeIn" setToFinalAlpha="true">
                            <Alpha duration="0.2" order="1" fromAlpha="0" toAlpha="0.3" />
                        </AnimationGroup>
                        <AnimationGroup parentKey="fadeOut" setToFinalAlpha="true">
                            <Alpha duration="0.2" order="1" fromAlpha="0.3" toAlpha="0" />
                        </AnimationGroup>
                    </Animations>
                </Texture>
            </Layer>
            <Layer level="BACKGROUND">
                <FontString parentKey="title" inherits="GameFontNormal"
                    text="Enter text"
                    justifyH="CENTER">
                    <Size x="200" y="20" />
                    <Anchors>
                        <Anchor point="TOPLEFT" x="20" y="-13" />
                        <Anchor point="BOTTOMRIGHT" x="-45" y="30" />
                    </Anchors>
                </FontString>
                <Texture parentKey="bg" atlas="lootroll-itementry-background"
                    alpha="0.6">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="13" y="-13" />
                        <Anchor point="BOTTOMRIGHT" x="-13" y="30" />
                    </Anchors>
                    <Animations>
                        <AnimationGroup parentKey="fadeIn" setToFinalAlpha="true">
                            <Alpha duration="0.2" order="1" fromAlpha="0.6" toAlpha="1" />
                        </AnimationGroup>
                        <AnimationGroup parentKey="fadeOut" setToFinalAlpha="true">
                            <Alpha duration="0.2" order="1" fromAlpha="1" toAlpha="0.6" />
                        </AnimationGroup>
                    </Animations>
                </Texture>
            </Layer>
        </Layers>
        <Frames>

            <Frame parentKey="Border" inherits="DialogBorderDarkTemplate" />
            <EditBox parentKey="editBox" multiLine="false" autoFocus="false" letters="255"
                font="GameFontHighlight">
                <Anchors>
                    <Anchor point="TOPLEFT" x="20" y="-13" />
                    <Anchor point="BOTTOMRIGHT" x="-45" y="30" />
                </Anchors>
            </EditBox>
            <Button parentKey="clearEditboxButton" inherits="UIButtonTemplate" hidden="true">
                <Size x="20" y="20" />
                <Anchors>
                    <Anchor point="RIGHT" x="25" y="0" relativeKey="$parent.editBox" />
                </Anchors>
                <KeyValues>
                    <KeyValue key="buttonArtKit" value="128-redbutton-delete" type="string" />
                </KeyValues>
                <Scripts>
                    <OnClick>
                        self:GetParent().editBox:SetText("")
                        self:GetParent():UpdateEditBoxElementsVisibility()
                    </OnClick>
                </Scripts>
            </Button>
            <Button parentKey="acceptButton" inherits="SharedButtonSmallTemplate" text="Accept"
                frameStrata="HIGH">
                <Size x="100" y="18" />
                <Anchors>
                    <Anchor point="BOTTOM" relativeTo="MapPinEnhancedTextModal" x="-55" y="11" />
                </Anchors>
            </Button>
            <Button parentKey="cancelButton" inherits="SharedButtonSmallTemplate" text="Cancel"
                frameStrata="HIGH">
                <Size x="100" y="18" />
                <Anchors>
                    <Anchor point="BOTTOM" relativeTo="MapPinEnhancedTextModal" x="55" y="11" />
                </Anchors>
            </Button>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad" />
        </Scripts>
    </Frame>
</Ui>
