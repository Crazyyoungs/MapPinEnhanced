<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">

    <Script file="ImportWindow.lua" />
    <Frame name="MapPinEnhancedImportWindowTemplate" mixin="MapPinEnhancedImportWindowMixin"
        virtual="true"
        toplevel="true" inherits="DefaultPanelFlatTemplate" parent="UIParent" enableMouse="true"
        movable="true" clampedToScreen="true"
        registerForDrag="LeftButton">
        <Size x="400" y="400" />
        <Anchors>
            <Anchor point="CENTER" relativeTo="UIParent" />
        </Anchors>
        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="helpText" inherits="GameFontNormal"
                    text="Click here to start adding text"
                    justifyH="CENTER">
                    <Size x="200" y="20" />
                    <Anchors>
                        <Anchor point="CENTER" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button inherits="BigRedExitButtonTemplate" frameStrata="HIGH">
                <Size x="16" y="16" />
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-4" y="-4" />
                </Anchors>
                <Scripts>
                    <OnClick>
                        self:GetParent():Close();
                    </OnClick>
                </Scripts>
            </Button>
            <Button parentKey="ClearEditboxButton" inherits="UIButtonTemplate">
                <Size x="24" y="24" />
                <Anchors>
                    <Anchor point="BOTTOMLEFT" x="10" y="5" />
                </Anchors>
                <KeyValues>
                    <KeyValue key="buttonArtKit" value="128-redbutton-delete" type="string" />
                </KeyValues>
                <Scripts>
                    <OnClick>
                        self:GetParent().scrollFrame.editBox:SetText("");
                        self:GetParent():UpdateHelpTextVisibility()
                    </OnClick>
                </Scripts>
            </Button>
            <ScrollFrame inherits="ScrollFrameTemplate" parentKey="scrollFrame" enableMouse="true">
                <Anchors>
                    <Anchor point="TOPLEFT" x="20" y="-35" />
                    <Anchor point="BOTTOMRIGHT" x="-15" y="20" />
                </Anchors>
                <KeyValues>
                    <KeyValue key="scrollBarX" value="-15" />
                    <KeyValue key="scrollBarTopY" value="-4" type="number" />
                    <KeyValue key="scrollBarBottomY" value="4" type="number" />
                    <KeyValue key="scrollBarHideIfUnscrollable" value="true" type="boolean" />
                </KeyValues>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture parentKey="bg" atlas="auctionhouse-background-buy-commodities"
                            alpha="0.6">
                            <Anchors>
                                <Anchor point="TOPLEFT" x="-5" y="5" />
                                <Anchor point="BOTTOMRIGHT" x="5" y="-5" />
                            </Anchors>
                            <Animations>
                                <AnimationGroup parentKey="fadeIn" setToFinalAlpha="true">
                                    <Alpha duration="0.2" order="1" fromAlpha="0.6" toAlpha="1" />
                                </AnimationGroup>
                                <AnimationGroup parentKey="fadeOut" setToFinalAlpha="true">
                                    <Alpha duration="0.2" order="1" fromAlpha="1" toAlpha="0.6" />
                                </AnimationGroup>
                            </Animations>
                        </Texture>
                    </Layer>
                    <Layer level="OVERLAY">
                        <Texture parentKey="glow" atlas="deathrecap-background-innerglow"
                            desaturated="true" alpha="0">
                            <Anchors>
                                <Anchor point="TOPLEFT" x="-5" y="5" />
                                <Anchor point="BOTTOMRIGHT" x="5" y="-5" />
                            </Anchors>
                            <Animations>
                                <AnimationGroup parentKey="fadeIn" setToFinalAlpha="true">
                                    <Alpha duration="0.2" order="1" fromAlpha="0" toAlpha="1" />
                                </AnimationGroup>
                                <AnimationGroup parentKey="fadeOut" setToFinalAlpha="true">
                                    <Alpha duration="0.2" order="1" fromAlpha="1" toAlpha="0" />
                                </AnimationGroup>
                            </Animations>
                        </Texture>
                    </Layer>
                </Layers>

                <ScrollChild>
                    <EditBox parentKey="editBox" multiLine="true" autoFocus="false"
                        font="ChatFontNormal">
                        <Size x="350" y="1" />
                        <Anchors>
                            <Anchor point="TOP" x="0" y="-5" />
                            <Anchor point="LEFT" x="10" />
                            <Anchor point="RIGHT" x="-10" />
                        </Anchors>
                    </EditBox>
                </ScrollChild>
            </ScrollFrame>
            <Button inherits="SharedButtonSmallTemplate" text="Import" frameStrata="HIGH">
                <Size x="100" y="22" />
                <Anchors>
                    <Anchor point="BOTTOM" relativeTo="MapPinEnhancedImportWindow" x="0" y="5" />
                </Anchors>
            </Button>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad" />
        </Scripts>
    </Frame>
</Ui>
