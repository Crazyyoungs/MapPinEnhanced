<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">

    <Script file="SetEditorPinEntry.lua" />
    <Frame name="MapPinEnhancedSetEditorPinEntryTemplate" virtual="true"
        mixin="MapPinEnhancedSetEditorPinEntryMixin" propagateKeyboardInput="true">
        <Size x="560" y="40" />
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="bg" atlas="Tab-Divider-Top" horizTile="true">
                    <Size x="1" y="10" />
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" x="15" y="3" />
                        <Anchor point="TOPRIGHT" relativePoint="BOTTOMRIGHT" y="3" />
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Frames>
            <Button parentKey="Pin" inherits="MapPinEnhancedBasePinTemplate">
                <Size x="30" y="30" />
                <Anchors>
                    <Anchor point="LEFT" x="20" y="0"></Anchor>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        self.title:ClearAllPoints()
                        self:SetPinColor()
                        self.texture:SetTexture(self.trackedTexture)
                    </OnLoad>
                    <!-- TODO: onclick: menu for colors (input with icon number / texture string) -->
                </Scripts>
            </Button>
            <EditBox parentKey="mapID" inherits="MapPinEnhancedInputTemplate" numeric="true"
                letters="5">
                <Size x="65" y="30" />
                <Anchors>
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeKey="$parent.Pin" x="15" />
                </Anchors>
                <Frames>
                    <!-- TODO: Use menu instead with continents > zones > subzones and override
                    mapid input field -->
                    <Button parentKey="mapSelection" hidden="true">
                        <Size x="15" y="15" />
                        <NormalTexture atlas="poi-islands-table" setAllPoints="true" alpha="0.8" />
                        <HighlightTexture atlas="poi-islands-table" setAllPoints="true" alpha="1" />
                        <PushedTexture atlas="poi-islands-table">
                            <Size x="15" y="15" />
                            <Anchors>
                                <Anchor point="CENTER" x="1" y="-1" />
                            </Anchors>
                        </PushedTexture>
                        <Anchors>
                            <Anchor point="RIGHT" x="-5" />
                        </Anchors>
                    </Button>
                </Frames>
            </EditBox>
            <EditBox parentKey="xCoord" inherits="MapPinEnhancedInputTemplate"
                letters="5">
                <KeyValues>
                    <KeyValue key="isDecimal" value="true" type="boolean" />
                </KeyValues>
                <Size x="45" y="30" />
                <Anchors>
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeKey="$parent.mapID" x="15" />
                </Anchors>
                <Scripts>
                    <OnChar method="OnChar" />
                </Scripts>
            </EditBox>
            <EditBox parentKey="yCoord" inherits="MapPinEnhancedInputTemplate"
                letters="5">
                <KeyValues>
                    <KeyValue key="isDecimal" value="true" type="boolean" />
                </KeyValues>
                <Size x="45" y="30" />
                <Anchors>
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeKey="$parent.xCoord" x="15" />
                </Anchors>
                <Scripts>
                    <OnChar method="OnChar" />
                </Scripts>
            </EditBox>
            <EditBox parentKey="title" inherits="MapPinEnhancedInputTemplate"
                letters="50">
                <Size x="150" y="30" />
                <Anchors>
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeKey="$parent.yCoord" x="15" />
                </Anchors>
            </EditBox>
            <!-- TODO: Add: menu with checkboxes for pinoptions: set tracked, set persistent -->

            <Button parentKey="deleteButton">
                <Size x="15" y="15" />
                <NormalTexture
                    file="Interface/AddOns/MapPinEnhanced/assets/Icons/MPHIconCross_Yellow.png"
                    setAllPoints="true" />
                <PushedTexture
                    file="Interface/AddOns/MapPinEnhanced/assets/Icons/MPHIconCross_Yellow.png">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="1" y="-1" />
                        <Anchor point="BOTTOMRIGHT" x="-1" y="1" />
                    </Anchors>
                </PushedTexture>
                <HighlightTexture
                    file="Interface/AddOns/MapPinEnhanced/assets/squarebuttons/MPHButtonSquareYellow_Highlight.png"
                    setAllPoints="true" alpha="0.5" />
                <Anchors>
                    <Anchor point="RIGHT" x="-10" />
                </Anchors>
            </Button>
            <Frame parentKey="pinOptions" inherits="MapPinEnhancedSelectTemplate">
                <Size x="1" y="30" />
                <Anchors>
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeKey="$parent.title" x="10" />
                    <Anchor point="RIGHT" relativePoint="LEFT" relativeKey="$parent.deleteButton"
                        x="-10" />
                </Anchors>
            </Frame>

        </Frames>
        <Scripts>
            <OnLoad method="OnLoad" />
        </Scripts>
    </Frame>
</Ui>
