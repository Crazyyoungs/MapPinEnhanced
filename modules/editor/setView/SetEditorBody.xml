<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">
    <Include file="SetEditorPinEntry.xml" />
    <Include file="SetEditorPinHeader.xml" />

    <Script file="SetEditorBody.lua" />
    <Frame name="MapPinEnhancedSetEditorViewBodyTemplate"
        mixin="MapPinEnhancedSetEditorViewBodyMixin"
        virtual="true" hidden="true"
        enableMouse="true">
        <Frames>
            <Frame parentKey="header" enableMouse="true">
                <Size x="1" y="30" />
                <Anchors>
                    <Anchor point="TOPLEFT" x="10" y="-15" />
                    <Anchor point="TOPRIGHT" x="-10" y="-15" />
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <FontString inherits="GameFontNormal" parentKey="infoText"
                            text="Select a set to edit or create a new one." setAllPoints="true"
                            justifyH="CENTER" justifyV="MIDDLE" />
                    </Layer>
                </Layers>
                <Frames>
                    <EditBox parentKey="setName" multiLine="false" letters="100" hidden="true"
                        font="GameFontNormalLarge"
                        autoFocus="false" propagateMouseInput="Clicks">
                        <TextInsets right="-25" />
                        <Size x="200" y="26" />
                        <Anchors>
                            <Anchor point="LEFT" x="15" />
                        </Anchors>
                        <Frames>
                            <Button parentKey="editButton">
                                <Size x="26" y="26" />
                                <Anchors>
                                    <Anchor point="RIGHT" />
                                </Anchors>
                                <Layers>
                                    <Layer level="OVERLAY">
                                        <Texture parentKey="icon"
                                            file="Interface/AddOns/MapPinEnhanced/assets/Icons/MPHIconEdit_Yellow.png">
                                            <Anchors>
                                                <Anchor point="TOPLEFT" x="6" y="-6" />
                                                <Anchor point="BOTTOMRIGHT" x="-6" y="6" />
                                            </Anchors>
                                        </Texture>
                                    </Layer>
                                </Layers>
                                <Scripts>
                                    <OnClick>
                                        local editBox = self:GetParent()
                                        if editBox:IsEnabled() then
                                            editBox:Disable()
                                            editBox:HighlightText(0, 0)
                                            self.icon:SetTexture("Interface\\AddOns\\MapPinEnhanced\\assets\\Icons\\MPHIconEdit_Yellow.png")
                                            editBox:SetPropagateMouseClicks(true)
                                            return
                                        end
                                        editBox:Enable()
                                        editBox:SetFocus()
                                        editBox:HighlightText()
                                        editBox:SetPropagateMouseClicks(false)
                                        self.icon:SetTexture("Interface\\AddOns\\MapPinEnhanced\\assets\\Icons\\MPHIconTick_Yellow.png")
                                    </OnClick>
                                </Scripts>
                            </Button>
                        </Frames>
                        <Scripts>
                            <OnEnterPressed>
                                self:Disable()
                                self:HighlightText(0, 0)
                                self.editButton.icon:SetTexture(
                                "Interface\\AddOns\\MapPinEnhanced\\assets\\Icons\\MPHIconEdit_Yellow.png")
                            </OnEnterPressed>
                        </Scripts>
                    </EditBox>
                    <Button parentKey="deleteButton" hidden="true"
                        inherits="MapPinEnhancedSquareButtonRedTemplate">
                        <Size x="26" y="26" />
                        <Anchors>
                            <Anchor point="RIGHT" x="-37" y="7" />
                        </Anchors>
                        <Layers>
                            <Layer level="OVERLAY">
                                <Texture
                                    file="Interface/AddOns/MapPinEnhanced/assets/Icons/MPHIconTrash_Yellow.png"
                                    texelSnappingBias="0" snapToPixelGrid="false">
                                    <Anchors>
                                        <Anchor point="TOPLEFT" x="6" y="-6" />
                                        <Anchor point="BOTTOMRIGHT" x="-6" y="6" />
                                    </Anchors>
                                </Texture>
                            </Layer>
                        </Layers>
                    </Button>
                    <Button parentKey="exportButton" hidden="true"
                        inherits="MapPinEnhancedSquareButtonYellowTemplate"
                        frameStrata="HIGH">
                        <Size x="26" y="26" />
                        <Anchors>
                            <Anchor point="RIGHT" x="-10" relativeKey="$parent.deleteButton"
                                relativePoint="LEFT" />
                        </Anchors>
                        <Layers>
                            <Layer level="OVERLAY">
                                <Texture
                                    file="Interface/AddOns/MapPinEnhanced/assets/Icons/MPHIconExport_Dark.png"
                                    desaturated="true">
                                    <Color r="0.4" g="0.4" b="0.4" />
                                    <Anchors>
                                        <Anchor point="TOPLEFT" x="6" y="-6" />
                                        <Anchor point="BOTTOMRIGHT" x="-6" y="6" />
                                    </Anchors>
                                </Texture>
                            </Layer>
                        </Layers>
                    </Button>
                    <Button parentKey="importFromMapButton" hidden="true"
                        inherits="MapPinEnhancedSquareButtonYellowTemplate"
                        frameStrata="HIGH">
                        <Size x="26" y="26" />
                        <Anchors>
                            <Anchor point="RIGHT" x="-10" relativeKey="$parent.deleteButton"
                                relativePoint="LEFT" />
                        </Anchors>
                        <Layers>
                            <Layer level="OVERLAY">
                                <Texture
                                    file="Interface/AddOns/MapPinEnhanced/assets/Icons/MPHIconExport_Dark.png"
                                    desaturated="true">
                                    <Color r="0.4" g="0.4" b="0.4" />
                                    <Anchors>
                                        <Anchor point="TOPLEFT" x="6" y="-6" />
                                        <Anchor point="BOTTOMRIGHT" x="-6" y="6" />
                                    </Anchors>
                                </Texture>
                            </Layer>
                        </Layers>
                    </Button>
                </Frames>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture parentKey="bg" atlas="Tab-Divider-Top" horizTile="true">
                            <Size x="1" y="10" />
                            <Anchors>
                                <Anchor point="BOTTOMLEFT" />
                                <Anchor point="BOTTOMRIGHT" />
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
            </Frame>
            <Button inherits="MapPinEnhancedButtonYellowTemplate" hidden="true"
                parentKey="addPinButton" text="Add Pin">
                <Size x="150" y="30" />
                <Anchors>
                    <Anchor point="CENTER" />
                </Anchors>
            </Button>
            <Frame inherits="MapPinEnhancedSetEditorPinHeaderTemplate" parentKey="pinListHeader"
                hidden="true">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.header" relativePoint="BOTTOMLEFT"
                        x="10" />
                    <Anchor point="TOPRIGHT" relativeKey="$parent.header"
                        relativePoint="BOTTOMRIGHT" x="-10" />
                </Anchors>
            </Frame>
            <ScrollFrame inherits="ScrollFrameTemplate" parentKey="scrollFrame">
                <Size x="590" y="1" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT"
                        relativeKey="$parent.pinListHeader" />
                    <Anchor point="BOTTOMRIGHT" x="-30" y="15" />
                </Anchors>
                <KeyValues>
                    <KeyValue key="scrollBarX" value="3" type="number" />
                    <KeyValue key="scrollBarTopY" value="-4" type="number" />
                    <KeyValue key="scrollBarHideIfUnscrollable" value="true"
                        type="boolean" />
                </KeyValues>
                <ScrollChild>
                    <Frame parentKey="Child" setAllPoints="true">
                        <Size x="590" y="10" />
                        <Anchors>
                            <Anchor point="TOPLEFT" x="0" y="0" />
                            <Anchor point="BOTTOMRIGHT" x="0" y="0" />
                        </Anchors>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>
            <ScrollFrame inherits="MapPinEnhancedScrollableTextareaTemplate" hidden="true"
                parentKey="importFrame">
                <Size x="590" y="1" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT"
                        relativeKey="$parent.header" x="5" y="-5" />
                    <Anchor point="BOTTOMRIGHT" x="-15" y="15" />
                </Anchors>
                <Frames>
                    <Button parentKey="confirmButton" inherits="MapPinEnhancedButtonYellowTemplate"
                        text="Import">
                        <Size x="100" y="30" />
                        <Anchors>
                            <Anchor point="BOTTOM" x="55" y="10" />
                        </Anchors>
                    </Button>
                    <Button parentKey="cancelImportButton"
                        inherits="MapPinEnhancedButtonRedTemplate" text="Back">
                        <Size x="100" y="30" />
                        <Anchors>
                            <Anchor point="BOTTOM" x="-55" y="10" />
                        </Anchors>
                    </Button>
                </Frames>
            </ScrollFrame>
            <Button parentKey="createSetButton"
                inherits="MapPinEnhancedButtonYellowTemplate" text="Create Set">
                <Size x="150" y="32" />
                <Anchors>
                    <Anchor point="CENTER" y="32" relativePoint="CENTER" />
                </Anchors>
            </Button>
            <Button parentKey="importButton"
                inherits="MapPinEnhancedButtonYellowTemplate" text="Import Set">
                <Size x="150" y="32" />
                <Anchors>
                    <Anchor point="CENTER" y="-32" relativePoint="CENTER" />
                </Anchors>
            </Button>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad" />
        </Scripts>
    </Frame>
</Ui>
