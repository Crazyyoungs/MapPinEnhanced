<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">
    <Include file="SetEditorPinEntry.xml" />

    <Script file="SetEditorBody.lua" />
    <Frame name="MapPinEnhancedSetEditorViewBodyTemplate"
        mixin="MapPinEnhancedSetEditorViewBodyMixin"
        virtual="true" hidden="true"
        enableMouse="true">
        <Frames>
            <Frame parentKey="setHeader" hidden="true">
                <Size x="1" y="50" />
                <Anchors>
                    <Anchor point="TOPLEFT" />
                    <Anchor point="TOPRIGHT" />
                </Anchors>
                <Frames>
                    <EditBox parentKey="setName" multiLine="false" letters="100"
                        font="GameFontNormalLarge"
                        autoFocus="false">
                        <Size x="200" y="40" />
                        <Anchors>
                            <Anchor point="LEFT" x="15" />
                        </Anchors>
                    </EditBox>
                    <Button parentKey="deleteButton"
                        inherits="MapPinEnhancedSquareButtonRedTemplate">
                        <Size x="30" y="30" />
                        <Anchors>
                            <Anchor point="RIGHT" x="-15" />
                        </Anchors>
                        <Layers>
                            <Layer level="OVERLAY">
                                <Texture
                                    file="Interface/AddOns/MapPinEnhanced/assets/Icons/MPHIconTrash_Yellow.png">
                                    <Anchors>
                                        <Anchor point="TOPLEFT" x="6" y="-6" />
                                        <Anchor point="BOTTOMRIGHT" x="-6" y="6" />
                                    </Anchors>
                                </Texture>
                            </Layer>
                        </Layers>
                    </Button>
                    <Button parentKey="importButton"
                        inherits="MapPinEnhancedSquareButtonYellowTemplate"
                        frameStrata="HIGH">
                        <Size x="30" y="30" />
                        <Anchors>
                            <Anchor point="RIGHT" x="-10" relativeKey="$parent.deleteButton"
                                relativePoint="LEFT" />
                        </Anchors>
                        <Layers>
                            <Layer level="OVERLAY">
                                <Texture
                                    file="Interface/AddOns/MapPinEnhanced/assets/Icons/MPHIconImport_Dark.png"
                                    desaturated="true">
                                    <Color r="0.4" g="0.4" b="0.4" />
                                    <Anchors>
                                        <Anchor point="TOPLEFT" x="6" y="-6" />
                                        <Anchor point="BOTTOMRIGHT" x="-6" y="6" />
                                    </Anchors>
                                </Texture>
                            </Layer>
                        </Layers>
                    </Button>
                    <Button parentKey="exportButton"
                        inherits="MapPinEnhancedSquareButtonYellowTemplate"
                        frameStrata="HIGH">
                        <Size x="30" y="30" />
                        <Anchors>
                            <Anchor point="RIGHT" x="-10" relativeKey="$parent.importButton"
                                relativePoint="LEFT" />
                        </Anchors>
                        <Layers>
                            <Layer level="OVERLAY">
                                <Texture
                                    file="Interface/AddOns/MapPinEnhanced/assets/Icons/MPHIconExport_Dark.png"
                                    desaturated="true">
                                    <Color r="0.4" g="0.4" b="0.4" />
                                    <Anchors>
                                        <Anchor point="TOPLEFT" x="6" y="-6" />
                                        <Anchor point="BOTTOMRIGHT" x="-6" y="6" />
                                    </Anchors>
                                </Texture>
                            </Layer>
                        </Layers>
                    </Button>
                </Frames>
            </Frame>
            <ScrollFrame inherits="ScrollFrameTemplate" parentKey="scrollFrame">
                <Size x="590" y="1" />
                <Anchors>
                    <Anchor point="TOPLEFT" x="0" y="-55" />
                    <Anchor point="BOTTOMRIGHT" x="-10" y="5" />
                </Anchors>
                <KeyValues>
                    <KeyValue key="scrollBarX" value="-10" type="number" />
                    <KeyValue key="scrollBarTopY" value="-4" type="number" />
                    <KeyValue key="scrollBarHideIfUnscrollable" value="true"
                        type="boolean" />
                </KeyValues>
                <ScrollChild>
                    <Frame parentKey="Child" setAllPoints="true">
                        <Size x="590" y="10" />
                        <Anchors>
                            <Anchor point="TOPLEFT" x="0" y="0" />
                            <Anchor point="BOTTOMRIGHT" x="0" y="0" />
                        </Anchors>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad" />
        </Scripts>
    </Frame>
</Ui>
