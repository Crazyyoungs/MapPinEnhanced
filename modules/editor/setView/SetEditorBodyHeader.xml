<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">
    <Script file="SetEditorBodyHeader.lua" />
    <Frame name="MapPinEnhancedSetEditorBodyHeader" mixin="MapPinEnhancedSetEditorBodyHeaderMixin"
        parentKey="header" enableMouse="true"
        virtual="true">
        <Size x="1" y="30" />
        <Anchors>
            <Anchor point="TOPLEFT" x="10" y="-15" />
            <Anchor point="TOPRIGHT" x="-10" y="-15" />
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="bg" atlas="Tab-Divider-Top" horizTile="true">
                    <Size x="1" y="10" />
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" />
                        <Anchor point="BOTTOMRIGHT" />
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <FontString inherits="GameFontNormal" parentKey="infoText"
                    text="Select a set to edit or create a new one." setAllPoints="true"
                    justifyH="CENTER" justifyV="MIDDLE" />
            </Layer>
        </Layers>
        <Frames>
            <EditBox parentKey="setName" multiLine="false" letters="100" hidden="true"
                font="GameFontNormalLarge"
                autoFocus="false" propagateMouseInput="Clicks">
                <TextInsets right="-25" />
                <Size x="200" y="26" />
                <Anchors>
                    <Anchor point="LEFT" x="15" />
                </Anchors>
                <Frames>
                    <Button parentKey="editButton">
                        <Size x="26" y="26" />
                        <Anchors>
                            <Anchor point="RIGHT" />
                        </Anchors>
                        <Layers>
                            <Layer level="OVERLAY">
                                <Texture parentKey="icon"
                                    file="Interface/AddOns/MapPinEnhanced/assets/icons/IconEdit_Yellow.png">
                                    <Anchors>
                                        <Anchor point="TOPLEFT" x="6" y="-6" />
                                        <Anchor point="BOTTOMRIGHT" x="-6" y="6" />
                                    </Anchors>
                                </Texture>
                            </Layer>
                        </Layers>
                        <Scripts>
                            <OnClick>
                                local editBox = self:GetParent()
                                if editBox:IsEnabled() then
                                    editBox:Disable()
                                    editBox:HighlightText(0, 0)
                                    self.icon:SetTexture("Interface\\AddOns\\MapPinEnhanced\\assets\\icons\\IconEdit_Yellow.png")
                                    editBox:SetPropagateMouseClicks(true)
                                    return
                                end
                                editBox:Enable()
                                editBox:SetFocus()
                                editBox:HighlightText()
                                editBox:SetPropagateMouseClicks(false)
                                self.icon:SetTexture("Interface\\AddOns\\MapPinEnhanced\\assets\\icons\\IconTick_Yellow.png")
                            </OnClick>
                        </Scripts>
                    </Button>
                </Frames>
                <Scripts>
                    <OnEnterPressed>
                        self:Disable()
                        self:HighlightText(0, 0)
                        self.editButton.icon:SetTexture(
                        "Interface\\AddOns\\MapPinEnhanced\\assets\\icons\\IconEdit_Yellow.png")
                    </OnEnterPressed>
                </Scripts>
            </EditBox>
            <Button parentKey="deleteButton" hidden="true"
                inherits="MapPinEnhancedSquareButtonRedTemplate">
                <Size x="26" y="26" />
                <Anchors>
                    <Anchor point="RIGHT" x="-37" y="7" />
                </Anchors>
                <KeyValues>
                    <KeyValue key="iconTexture"
                        value="Interface/AddOns/MapPinEnhanced/assets/icons/IconTrash_Yellow.png" />
                    <KeyValue key="tooltip" value="Delete Set" />
                </KeyValues>
            </Button>
            <Button parentKey="exportButton" hidden="true"
                inherits="MapPinEnhancedSquareButtonYellowTemplate"
                frameStrata="HIGH">
                <Size x="26" y="26" />
                <Anchors>
                    <Anchor point="RIGHT" x="-10" relativeKey="$parent.deleteButton"
                        relativePoint="LEFT" />
                </Anchors>
                <KeyValues>
                    <KeyValue key="iconTexture"
                        value="Interface/AddOns/MapPinEnhanced/assets/icons/IconExport_Dark.png" />
                    <KeyValue key="tooltip" value="Export Set" />
                </KeyValues>
            </Button>
            <Button parentKey="importFromMapButton" hidden="true"
                inherits="MapPinEnhancedSquareButtonYellowTemplate"
                frameStrata="HIGH">
                <Size x="26" y="26" />
                <Anchors>
                    <Anchor point="RIGHT" x="-10" relativeKey="$parent.exportButton"
                        relativePoint="LEFT" />
                </Anchors>
                <KeyValues>
                    <KeyValue key="iconTexture"
                        value="Interface/AddOns/MapPinEnhanced/assets/icons/IconMap_Dark.png" />
                    <KeyValue key="tooltip" value="Import pins from map" />
                </KeyValues>
            </Button>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad" />
        </Scripts>
    </Frame>
</Ui>
