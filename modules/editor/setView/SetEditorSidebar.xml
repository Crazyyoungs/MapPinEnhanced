<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">

    <Script file="SetEditorSidebar.lua" />
    <Frame name="MapPinEnhancedSetEditorViewSidebarTemplate"
        mixin="MapPinEnhancedSetEditorViewSidebarMixin"
        virtual="true" hidden="true"
        enableMouse="true">
        <Frames>
            <Frame parentKey="header">
                <Size x="1" y="30" />
                <Anchors>
                    <Anchor point="TOPLEFT" x="10" y="-15" />
                    <Anchor point="TOPRIGHT" x="-10" y="-15" />
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture parentKey="bg" atlas="Tab-Divider-Top" horizTile="true">
                            <Size x="1" y="10" />
                            <Anchors>
                                <Anchor point="BOTTOMLEFT" />
                                <Anchor point="BOTTOMRIGHT" />
                            </Anchors>
                        </Texture>
                    </Layer>
                    <Layer level="OVERLAY">
                        <FontString inherits="GameFontNormalLarge" text="Sets"
                            justifyH="CENTER">
                            <Anchors>
                                <Anchor point="CENTER" />
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
            <EditBox inherits="MapPinEnhancedInputTemplate" parentKey="searchInput"
                autoFocus="false">
                <Size x="1" y="30" />
                <Anchors>
                    <Anchor point="TOPLEFT" x="15" y="-5" relativeKey="$parent.header"
                        relativePoint="BOTTOMLEFT" />
                    <Anchor point="TOPRIGHT" x="-10" y="-5" relativeKey="$parent.header"
                        relativePoint="BOTTOMRIGHT" />
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <Texture name="$parentSearchIcon" atlas="common-search-magnifyingglass"
                            useAtlasSize="false">
                            <Size x="10" y="10" />
                            <Anchors>
                                <Anchor point="LEFT" x="1" y="-1" />
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
                <FontString inherits="GameFontHighlight" />
                <Frames>
                    <Button name="$parentClearButton" parentKey="clearButton" hidden="true">
                        <Size x="12" y="12" />
                        <Anchors>
                            <Anchor point="RIGHT" x="-8" y="0" />
                        </Anchors>
                        <Layers>
                            <Layer level="ARTWORK">
                                <Texture atlas="common-search-clearbutton" setAllPoints="true" />
                            </Layer>
                        </Layers>
                        <Scripts>
                            <OnClick>
                                self:GetParent():SetText("")
                            </OnClick>
                        </Scripts>
                    </Button>
                </Frames>
            </EditBox>

            <Button parentKey="switchViewButton"
                inherits="MapPinEnhancedSquareButtonRedTemplate">
                <Size x="26" y="26" />
                <Anchors>
                    <Anchor point="BOTTOMLEFT" x="10" y="15" />
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <Texture
                            file="Interface/AddOns/MapPinEnhanced/assets/Icons/MPHIconSettings_Yellow.png">
                            <Anchors>
                                <Anchor point="TOPLEFT" x="6" y="-6" />
                                <Anchor point="BOTTOMRIGHT" x="-6" y="6" />
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
            </Button>
            <Button parentKey="createSetButton" inherits="MapPinEnhancedButtonYellowTemplate">
                <Size x="1" y="26" />
                <Anchors>
                    <Anchor point="BOTTOMLEFT" x="5" relativeKey="$parent.switchViewButton"
                        relativePoint="BOTTOMRIGHT" />
                    <Anchor point="BOTTOMRIGHT" x="-10" y="15" />
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <FontString inherits="MPHGameFontNormalBlack" text="New Set"
                            justifyH="CENTER" setAllPoints="true" />
                    </Layer>
                </Layers>
            </Button>
            <ScrollFrame inherits="ScrollFrameTemplate" parentKey="scrollFrame">
                <Size x="1" y="1" />
                <Anchors>
                    <Anchor point="TOPLEFT" x="-15" y="0" relativeKey="$parent.searchInput"
                        relativePoint="BOTTOMLEFT" />
                    <Anchor point="BOTTOMRIGHT" x="-25" y="45" />
                </Anchors>
                <KeyValues>
                    <KeyValue key="scrollBarX" value="3" type="number" />
                    <KeyValue key="scrollBarTopY" value="-4" type="number" />
                    <KeyValue key="scrollBarHideIfUnscrollable" value="true"
                        type="boolean" />
                </KeyValues>
                <ScrollChild>
                    <Frame parentKey="Child">
                        <Size x="275" y="1" />
                        <Anchors>
                            <Anchor point="TOPLEFT" x="0" y="0" />
                            <Anchor point="BOTTOMRIGHT" x="0" y="0" />
                        </Anchors>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad" />
            <OnShow method="OnShow" />
            <OnHide method="OnHide" />
        </Scripts>
    </Frame>
</Ui>
