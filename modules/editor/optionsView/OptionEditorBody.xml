<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">

    <Script file="OptionEditorBody.lua" />
    <Frame name="MapPinEnhancedOptionEditorViewBodyTemplate"
        mixin="MapPinEnhancedOptionEditorViewBodyMixin"
        virtual="true" hidden="true"
        enableMouse="true">
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="descriptionBG" atlas="Artifacts-BG-Shadow">
                    <Size x="200" y="1" />
                    <Gradient orientation="HORIZONTAL">
                        <MinColor r="1" g="1" b="1" a="1" />
                        <MaxColor r="1" g="1" b="1" a="0" />
                    </Gradient>
                    <Anchors>
                        <Anchor point="TOPRIGHT" x="-7" y="-6" />
                        <Anchor point="BOTTOMRIGHT" x="-7" y="6" />
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Frames>
            <Frame parentKey="descriptionFrame">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.descriptionBG" />
                    <Anchor point="BOTTOMRIGHT" relativeKey="$parent.descriptionBG" />
                </Anchors>
                <Frames>
                    <Frame parentKey="header">
                        <Size x="1" y="30" />
                        <Anchors>
                            <Anchor point="TOPLEFT" x="3" y="-9" />
                            <Anchor point="TOPRIGHT" x="-3" y="-9"
                                relativeKey="$parent.descriptionFrame" />
                        </Anchors>
                        <Layers>
                            <Layer level="BACKGROUND">
                                <Texture parentKey="bg" atlas="Tab-Divider-Top" horizTile="true">
                                    <Size x="1" y="10" />
                                    <Anchors>
                                        <Anchor point="BOTTOMLEFT" />
                                        <Anchor point="BOTTOMRIGHT" />
                                    </Anchors>
                                </Texture>
                            </Layer>
                            <Layer level="OVERLAY">
                                <FontString
                                    parentKey="optionName" inherits="GameFontNormalLarge"
                                    justifyH="CENTER">
                                    <Anchors>
                                        <Anchor point="CENTER" />
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                    </Frame>
                    <Frame parentKey="holder">
                        <Size x="1" y="1" />
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent.header"
                                relativePoint="BOTTOMLEFT" />
                            <Anchor point="BOTTOMRIGHT" />
                        </Anchors>
                        <Layers>
                            <Layer level="OVERLAY">
                                <Texture parentKey="descriptionImage">
                                    <Size x="1" y="175" />
                                    <Anchors>
                                        <Anchor point="TOPLEFT" x="5" />
                                        <Anchor point="TOPRIGHT" x="-5" />
                                    </Anchors>
                                </Texture>
                                <FontString parentKey="description" inherits="GameFontHighlight"
                                    justifyH="LEFT" spacing="2"
                                    justifyV="TOP">
                                    <Size x="1" y="1" />
                                    <Anchors>
                                        <Anchor point="TOPLEFT" x="5" y="-10"
                                            relativeKey="$parent.descriptionImage"
                                            relativePoint="BOTTOMLEFT" />
                                        <Anchor point="BOTTOMRIGHT" x="-8" y="5" />
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                    </Frame>
                </Frames>
            </Frame>
            <Frame parentKey="header">
                <Size x="1" y="30" />
                <Anchors>
                    <Anchor point="TOPLEFT" x="10" y="-15" />
                    <Anchor point="TOPRIGHT" x="-10" y="-15" relativePoint="TOPLEFT"
                        relativeKey="$parent.descriptionFrame" />
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture parentKey="bg" atlas="Tab-Divider-Top" horizTile="true">
                            <Size x="1" y="10" />
                            <Anchors>
                                <Anchor point="BOTTOMLEFT" />
                                <Anchor point="BOTTOMRIGHT" />
                            </Anchors>
                        </Texture>
                    </Layer>
                    <Layer level="OVERLAY">
                        <FontString parentKey="selectedCategoryName" inherits="GameFontNormalLarge"
                            text="Selected option category"
                            justifyH="CENTER">
                            <Anchors>
                                <Anchor point="CENTER" />
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
            <ScrollFrame inherits="ScrollFrameTemplate" parentKey="scrollFrame">
                <Size x="1" y="1" />
                <Anchors>
                    <Anchor point="TOPLEFT" x="15" y="-30" relativeKey="$parent.header" />
                    <Anchor point="BOTTOMRIGHT" relativeKey="$parent.descriptionFrame"
                        relativePoint="BOTTOMLEFT" x="-20" y="10" />
                </Anchors>
                <KeyValues>
                    <KeyValue key="scrollBarX" value="6" type="number" />
                    <KeyValue key="scrollBarTopY" value="0" type="number" />
                    <KeyValue key="scrollBarBottomY" value="0" type="number" />
                    <KeyValue key="scrollBarHideIfUnscrollable" value="true"
                        type="boolean" />
                </KeyValues>
                <ScrollChild>
                    <Frame parentKey="Child">
                        <Size x="385" y="1" />
                        <Anchors>
                            <Anchor point="TOPLEFT" x="0" y="0" />
                            <Anchor point="BOTTOMRIGHT" x="0" y="0" />
                        </Anchors>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>
        </Frames>
        <Scripts>
            <OnShow method="OnShow" />
        </Scripts>
    </Frame>
</Ui>
