<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">
    <Script file="TrackerSetEntry.lua" />
    <Button name="MapPinEnhancedTrackerSetEntryTemplate" mixin="MapPinEnhancedTrackerSetEntryMixin"
        enableMouse="true" virtual="true">
        <Size x="300" y="37" />
        <Layers>
            <Layer level="BACKGROUND">
                <Texture atlas="cosmic-bar-fill-white"
                    setAllPoints="true">
                    <Gradient orientation="HORIZONTAL">
                        <MinColor r="1.0" g="0.82" b="0" a="0.5" />
                        <MaxColor r="1.0" g="0.82" b="0" a="0" />
                    </Gradient>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <Texture parentKey="icon" file="Interface/AddOns/MapPinEnhanced/assets/SetsIcon.png">
                    <Size x="40" y="40" />
                    <Anchors>
                        <Anchor point="LEFT" x="10" />
                    </Anchors>
                </Texture>
                <FontString parentKey="title" font="GameFontNormal" justifyH="LEFT"
                    justifyV="MIDDLE">
                    <Size x="1" y="10" />
                    <Anchors>
                        <Anchor point="LEFT" x="10" relativePoint="RIGHT" relativeKey="$parent.icon" />
                        <Anchor point="RIGHT" x="-10" />
                    </Anchors>
                </FontString>
            </Layer>
            <Layer level="OVERLAY">
                <Texture parentKey="activeTexture" setAllPoints="true"
                    atlas="communitiesfinder_card_highlight" hidden="true" />
            </Layer>
        </Layers>
        <!-- <Animations>
            <AnimationGroup parentKey="appear">
                <Translation duration="0" order="1" offsetY="20" smoothing="IN_OUT" />
                <Alpha fromAlpha="0" toAlpha="1" duration="0.5" order="2" startDelay="0.1" />
                <Translation duration="0.5" order="2" offsetY="-20" smoothing="IN_OUT"
                    startDelay="0.1" />
            </AnimationGroup>
        </Animations> -->
    </Button>
</Ui>
