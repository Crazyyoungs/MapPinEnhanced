<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/beta/Interface/AddOns/Blizzard_SharedXML/UI.xsd">

    <Script file="TrackerFrame.lua" />
    <Frame name="MapPinEnhancedTrackerFrameTemplate" mixin="MapPinEnhancedTrackerFrameMixin"
        virtual="true"
        toplevel="true" parent="UIParent" enableMouse="true" movable="true" clampedToScreen="true"
        registerForDrag="LeftButton">
        <Size x="300" y="200" />
        <!-- TODO: resize frame dynamically based on height and how many elements are in the
        scrollframe -->
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="headerTexture"
                    file="Interface/AddOns/MapPinEnhanced/assets/PinTracker_HeaderShadow.png">
                    <Color r="0.7" g="0.7" b="0.7" />
                    <Size x="300" y="28" />
                    <Anchors>
                        <Anchor point="TOPLEFT" y="-15" />
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <FontString parentKey="title" inherits="GameFontNormal"
                    text="Map Pin Enhanced Tracker"
                    justifyH="CENTER">
                    <Size x="300" y="26" />
                    <Anchors>
                        <Anchor point="TOPLEFT" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button inherits="BigRedExitButtonTemplate">
                <Size x="16" y="16" />
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-5" y="-5" />
                </Anchors>
                <Scripts>
                    <OnClick>
                        self:GetParent():Close();
                    </OnClick>
                </Scripts>
            </Button>
            <Button parentKey="viewToggle">
                <Size x="16" y="16" />
                <NormalTexture atlas="128-RedButton-Plus"
                    setAllPoints="true" />
                <PushedTexture atlas="128-RedButton-Plus-Pressed"
                    setAllPoints="true" />
                <HighlightTexture atlas="128-RedButton-Plus-Highlight"
                    setAllPoints="true" />
                <Anchors>
                    <Anchor point="TOPLEFT" x="5" y="-2" />
                </Anchors>
            </Button>
            <Button parentKey="editorToggle">
                <Size x="16" y="16" />
                <NormalTexture atlas="128-RedButton-ArrowDown"
                    setAllPoints="true" />
                <PushedTexture atlas="128-RedButton-ArrowDown-Pressed"
                    setAllPoints="true" />
                <HighlightTexture atlas="128-RedButton-ArrowDown-Highlight"
                    setAllPoints="true" />
                <Anchors>
                    <Anchor point="LEFT" x="5" relativeKey="$parent.viewToggle"
                        relativePoint="RIGHT" />
                </Anchors>
            </Button>
            <ScrollFrame inherits="ScrollFrameTemplate" parentKey="scrollFrame">
                <Anchors>
                    <Anchor point="TOPLEFT" x="0" y="-30" />
                    <Anchor point="BOTTOMRIGHT" x="0" y="0" />
                </Anchors>
                <Size x="300" y="1" />
                <KeyValues>
                    <KeyValue key="scrollBarX" value="-20" type="number" />
                    <KeyValue key="scrollBarTopY" value="-4" type="number" />
                    <KeyValue key="scrollBarHideIfUnscrollable" value="true" type="boolean" />
                </KeyValues>
                <ScrollChild>
                    <Frame parentKey="Child">
                        <Size x="300" y="1" />
                        <Anchors>
                            <Anchor point="TOPLEFT" x="0" y="0" />
                            <Anchor point="BOTTOMRIGHT" x="0" y="0" />
                        </Anchors>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad" />
            <OnMouseDown method="OnMouseDown" />
            <OnMouseUp method="OnMouseUp" />
        </Scripts>
    </Frame>
</Ui>
