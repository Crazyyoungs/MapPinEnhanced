<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">
    <Script file="TrackerPinEntry.lua" />
    <Button name="MapPinEnhancedTrackerPinEntryTemplate" mixin="MapPinEnhancedTrackerPinEntryMixin"
        virtual="true" enableMouse="true" clipChildren="false">
        <Size x="300" y="37" />
        <KeyValues>
            <KeyValue key="titlePosition" value="RIGHT" />
            <KeyValue key="titleXOffset" value="10" />
            <KeyValue key="titleYOffset" value="9" />
        </KeyValues>
        <Frames>
            <Frame parentKey="Pin" inherits="MapPinEnhancedBasePinTemplate">
                <Anchors>
                    <Anchor point="LEFT" x="5" />
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString inherits="GameFontNormalSmall" text="1" justifyH="RIGHT"
                            parentKey="count">
                            <Anchors>
                                <Anchor point="TOPRIGHT"
                                    relativePoint="BOTTOMLEFT" x="15" y="10" />
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
        </Frames>
        <Layers>
            <Layer level="HIGHLIGHT">
                <Texture parentKey="highlight" atlas="groupfinder-button-select" alphaMode="ADD"
                    setAllPoints="true" />
            </Layer>
            <Layer level="ARTWORK">
                <FontString inherits="GameFontHighlight" text="Stockades">
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Pin" relativePoint="RIGHT" x="10"
                            y="-9" />
                    </Anchors>
                </FontString>
            </Layer>
            <Layer level="BACKGROUND">
                <Texture
                    parentKey="bgLeft" texelSnappingBias="0"
                    snapToPixelGrid="false"
                    file="Interface/AddOns/MapPinEnhanced/assets/PinTrackerBar/PinTracker_Bar_Left.png">
                    <Size x="32" y="32" />
                    <Anchors>
                        <Anchor point="LEFT" x="-9" relativeKey="$parent.Pin" relativePoint="RIGHT" />
                    </Anchors>
                </Texture>
                <Texture parentKey="bgRight" texelSnappingBias="0"
                    snapToPixelGrid="false"
                    file="Interface/AddOns/MapPinEnhanced/assets/PinTrackerBar/PinTracker_Bar_Right.png"
                    alpha="0.2">
                    <Size x="32" y="32" />
                    <Anchors>
                        <Anchor point="RIGHT" x="0" />
                    </Anchors>

                </Texture>
                <Texture parentKey="bgMiddle"
                    texelSnappingBias="0"
                    snapToPixelGrid="false"
                    file="Interface/AddOns/MapPinEnhanced/assets/PinTrackerBar/PinTracker_Bar_Middle.png"
                    horizTile="true">
                    <Size x="1" y="32" />
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.bgLeft"
                            relativePoint="RIGHT" />
                        <Anchor point="RIGHT" relativeKey="$parent.bgRight"
                            relativePoint="LEFT" />
                    </Anchors>
                    <Gradient>
                        <MinColor r="1" g="1" b="1" a="1" />
                        <MaxColor r="1" g="1" b="1" a="0.2" />

                    </Gradient>
                </Texture>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad method="OnLoad" />
            <OnEnter method="OnEnter" />
            <OnLeave method="OnLeave" />
        </Scripts>
        <!-- <Animations>
            <AnimationGroup parentKey="appear">
                <Translation duration="0" order="1" offsetX="15" smoothing="IN_OUT" />
                <Alpha toAlpha="0" duration="0" order="1" />
                <Alpha fromAlpha="0" toAlpha="1" duration="0.3" order="2" startDelay="0.1"
                    smoothing="IN" />
                <Translation duration="0.3" order="2" offsetX="-15" smoothing="IN"
                    startDelay="0.1" />
            </AnimationGroup>
        </Animations> -->
    </Button>
</Ui>
